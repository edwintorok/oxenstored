(executable
 (modes native)
 (name xenstored)
 (modules
  (:standard \ syslog))
 (flags
  (:standard -w -52))
 (libraries unix xen.bus xen.mmap xen.ctrl xen.eventchn xenstubs))

(install
 (package oxenstored)
 (section sbin)
 (files
  (xenstored.exe as oxenstored)))

